<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.exam.navigation.DetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pageDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id1Q"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:text="Aici vine intrebarea cu multe optiuni"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/idCat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Categoria"
            app:layout_constraintEnd_toStartOf="@+id/idDate"
            app:layout_constraintStart_toStartOf="@+id/id1Q"
            app:layout_constraintTop_toBottomOf="@+id/id1Q" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#CCCCCC"
            app:layout_constraintTop_toBottomOf="@+id/idCat" />


        <TextView
            android:id="@+id/idDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/idCat" />


        <TextView
            android:id="@+id/idR1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:text="Raspuns 1"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/idB1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <Switch
            android:id="@+id/idB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/idR1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/idR1" />

        <TextView
            android:id="@+id/idR2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:text="Raspuns 2"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/idB1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idR1" />

        <Switch
            android:id="@+id/idB2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/idR2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/idR2" />

        <TextView
            android:id="@+id/idR3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:text="Raspuns 3"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/idB1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idR2" />

        <Switch
            android:id="@+id/idB3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/idR3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/idR3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>