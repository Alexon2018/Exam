<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Views.SignInActivity">

        <Button
            android:id="@+id/idButtonProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonProf"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idTextSignIn" />

        <Button
            android:id="@+id/idButtonElev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonElev"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/idTextSignIn" />

        <TextView
            android:id="@+id/idTextSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idTextSignIn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toTopOf="@+id/idTextSignIn"
            app:layout_constraintEnd_toEndOf="@+id/idTextSignIn"
            app:layout_constraintStart_toStartOf="@+id/idTextSignIn"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_login_24"
            android:contentDescription="@string/contentDescriptionSignIn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>